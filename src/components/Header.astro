---
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Services', href: '#services' },
    { linkText: 'Pricing', href: '#pricing' },
    { linkText: 'Contact', href: '#contact' }
];
---

<nav class="flex flex-wrap items-center justify-between gap-4 pt-6 pb-12 sm:pt-12 sm:pb-20">
    <a href="/" class="flex items-center gap-3 no-underline">
        <Logo />
        <span class="text-xl font-bold gradient-text">Flux Development</span>
    </a>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-2 gap-y-1">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-3 py-2 text-gray-300 no-underline transition hover:text-white hover:bg-white/5 rounded-lg">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
